-- Fun√ß√£o: listar objetos
local function listarObjetos(filtro)
    scroll:ClearAllChildren()
    local y = 0

    for _, obj in ipairs(workspace:GetDescendants()) do
        if not filtro or string.find(obj.Name:lower(), filtro:lower()) then
            local button = Instance.new("TextButton", scroll)
            button.Size = UDim2.new(1, -10, 0, 40)
            button.Position = UDim2.new(0, 5, 0, y)
            button.Text = obj.Name
            button.TextColor3 = Color3.fromRGB(255,255,255)
            button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
            button.Font = Enum.Font.SourceSansBold
            button.TextSize = 18

            local btnCorner = Instance.new("UICorner", button)
            btnCorner.CornerRadius = UDim.new(0, 8)

            -- Clique = teleportar
            button.MouseButton1Click:Connect(function()
                local char = player.Character or player.CharacterAdded:Wait()
                if obj:IsA("BasePart") then
                    char:MoveTo(obj.Position)
                    print("Teleportado para:", obj:GetFullName())
                end
            end)

            y = y + 45
        end
    end
    scroll.CanvasSize = UDim2.new(0, 0, 0, y)
end

-- Atualiza quando digitar
searchBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        listarObjetos(searchBox.Text)
    end
end)

-- Lista inicial (sem filtro)
listarObjetos(nil)
